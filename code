function myFunction3(){
	var x="";
	var time=new Date().getHours();
	if (time<20){
		x="Good Day";
	}
	document.getElementById("wenhou").innerHTML=x;
};

function myFunction4(){
	var x="";
	var time=new Date().getHours();
	if (time>23){
	x="Good Night.";
	}
	else {
		x="Good day.";
	}
	document.getElementById("wanan").innerHTML=x;
};



