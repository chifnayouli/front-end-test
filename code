function car(){
	var cars=["BMW","VW","Volvo","Honda"]
	for (var i=0; i<cars.length;i++) {
		document.getElementById("car").innerHTML=cars;
}

};

function functions(){
	var x="";
	for (var i=0;i<5;i++){
		x=x + "该数字为 "+ i +"<br>";
	}
	document.getElementById("loop").innerHTML=x;
}


function abc(){
	var x="",i=0;
	while (i<5){
		x=x + "该数字为 " + i + "<br>";
		i++;
	}
	document.getElementById("while").innerHTML=x;
}

